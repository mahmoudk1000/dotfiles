configuration {
  font:                  "SF Pro Rounded 13";
  line-padding:          10;
  separator-style:       none;
  hide-scrollbar:        true;
}

* {
  bg:  #2e3440ff;
  se:  #4c566aff;
  fg:  #eceff4ff;
  ac:  #5e81acff;
}

* {
	background-color: @bg;
	text-color: @fg;
	spacing: 0;
	width: 370px;
}

inputbar {
    children: [ prompt ];
    expand: false;
    position: center;
    border-radius: 4px;
    background-color: @ac;
}

textbox-prompt-colon {
    padding: 1.7% 0% 1.7% 1.5%;
	str: "ÙÄê´   Syetem Uptime  -";
    background-color: @ac;
    text-color: @bg;
}

prompt{
    expand: false;
    padding: 1.7% 1.7% 1.7% 1.7%;
    enabled: true;
	background-color: @ac;
	text-color: @bg;
}

listview {
	cycle: true;
	margin: 0 0 0 0;
	scrollbar: false;
}

element selected {
    margin: 10px;
	background-color: @se;
	text-color: @fg;
    border-radius:  4px;
}

element{
    padding: 12px;
}
